{
  "name": "express-ts-starter",
  "author": "zharrane",
  "version": "1.0.0",
  "description": "This is a boilerplate for a node express typescript.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zharrane/express-typescript-starter.git"
  },
  "bugs": {
    "url": "https://github.com/zharrane/express-typescript-starter/issues"
  },
  "homepage": "https://github.com/zharrane/express-typescript-starter#readme",
  "main": "main.ts",
  "scripts": {
    "build": "tsc",
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "concurrently \"tsc --watch\" \"nodemon -q dist/main.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pm2": "^5.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.10",
    "@types/swagger-jsdoc": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.7.1",
    "nodemon": "^3.0.1",
    "prettier": "3.0.3",
    "typescript": "^5.2.2"
  }
}
